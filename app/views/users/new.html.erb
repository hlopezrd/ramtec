<% provide(:title, 'Registrarse') %>
<h1>Registrarse</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages' %>
	  
      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Clave" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear Mi Cuenta", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>